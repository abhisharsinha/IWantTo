    function getCheckboxValue() {
      var els = document.querySelectorAll('input:checked');
      var interests = [];
      for (var i=0; i<els.length; i++) {
        interests.push(els[i].value);
      }
      console.log(interests);
      // var xhr = new XMLHttpRequest();
      // xhr.open("POST", "/interest");
