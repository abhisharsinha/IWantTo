    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
    <!-- Custom styles for this template -->
    <link href="static/avatar.css" rel="stylesheet">
  </head>
  <body class="bg-light">

    <header>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Avatar Page</a>
      
          <a href="/logout"><button class="btn btn-outline-danger my-2 my-sm-0">logout</button></a>
        </div>
      </nav>
    </header>
    
<div class="container">
  <main>
    <div class="py-5 text-center">
      <div class="d-block mx-auto mb-4" >
      </div>
    </div>
    <% if(typeof error !== 'undefined') { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Oops!</strong> Username already exists.
      </div>
    <% } %>
    <div class="py-5 text-center">
      <div class="d-block mx-auto mb-4"  width="72" height="57">
      <h2>Enter username</h2>
      <p class="lead">Username will be your unique id for this platform</p>
      </div>
    </div>

    <div class="row g-5">
        
      </div>
      
        <h4 class="mb-3">Basic details</h4>
        
        <form class="needs-validation" action="/avatar" method="post">
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">First name</label>
              <input type="text" class="form-control" id="firstName" placeholder="<%= fname %>" value="" readonly>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" class="form-control" id="lastName" placeholder="<%= lname %>" value="" readonly>
              
            </div>
            <div class="col-12">
              <label for="email" class="form-label">Email</label>
              <div class="input-group has-validation">
                <!-- <span class="input-group-text"></span> -->
                <input type="text" class="form-control" id="email" placeholder="<%= email %>" readonly>
              
            </div>

            <div class="col-12">
              <label for="username" class="form-label">Username</label>
              <div class="input-group has-validation">
                <span class="input-group-text">@</span>
                <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
            </div>
          <hr class="my-4">
          <button class="w-100 btn-primary btn btn-success" type="submit">Save</button>
        </form>
      </div>
    </div>
  </main>
</div>
  <script>
    $(".alert").alert('close')
  </script>
  </body>
</html>
